generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String   @id @default(uuid())
  name             String
  email            String   @unique
  password         String
  isVerified       Boolean  @default(false)
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tickets Ticket[]
  @@map("users")
}

model Ticket {
  id          String          @id @default(uuid())
  subject     String
  description String?
  category    TicketCategory
  priority    TicketPriority
  status      TicketStatus   @default(OPEN)

  userId      String
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([userId])
  @@index([status])
  @@index([priority])
  @@map("tickets")
}

enum TicketCategory {
  TECHNICAL
  BILLING
  GENERAL
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}